<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="krt.com.jtab.Fragments.FeedbackFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp" />

        <TextView
            android:text="Please send us a note below to:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_margin="5sp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="60sp">

            <TextView
                android:text="1. Give feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp" />

            <TextView
                android:text="2. Request a song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp" />

            <TextView
                android:text="3. Report error in chords or lyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="30sp"
            android:hint="Feedback"
            android:textSize="18sp" />

        <Button
            android:text="Send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_margin="20sp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:text="JTabs Produced By:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView11"
            android:layout_marginTop="50sp"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:text="@string/string_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView12"
            android:layout_marginTop="10sp"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="20sp" />

    </LinearLayout>
</FrameLayout>
